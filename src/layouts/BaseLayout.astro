---
import Nav from '../components/Nav.astro';

interface Props {
  title?: string;
  description?: string;
}

const { title = "Cameron Durham", description = "Cameron Durham - SDE II at Amazon" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title}</title>

  <link rel="preconnect" href="https://cdn.jsdelivr.net" />
  <link href="https://cdn.jsdelivr.net/npm/jetbrains-mono@1.0.6/css/jetbrains-mono.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/@fontsource/space-grotesk@4.5.8/index.min.css" rel="stylesheet" />

  <script is:inline>
    (function() {
      const theme = localStorage.getItem('theme');
      if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
      }
    })();
  </script>

  <script data-goatcounter="https://u64cam.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
</head>
<body>
  <Nav />
  <main class="main-content">
    <slot />
  </main>

  <script is:inline>
    function toggleTheme() {
      const html = document.documentElement;
      const isDark = html.classList.toggle('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
      document.getElementById('theme-icon').textContent = isDark ? '☀' : '☾';
    }
    document.addEventListener('DOMContentLoaded', () => {
      const icon = document.getElementById('theme-icon');
      if (icon) icon.textContent = document.documentElement.classList.contains('dark') ? '☀' : '☾';
    });
  </script>
</body>
</html>

<style is:global>
:root {
  --border-color: #e0e0e0;
  --font-size-base: 13.5px;
  --mono-text-font: "Jetbrains Mono", monospace;
  --text-font: "Space Grotesk", "Helvetica", sans-serif;
  --header-font: "Space Grotesk", "Helvetica", sans-serif;
  --code-font: "Jetbrains Mono", monospace;
  --line-height: 1.5;
  --page-width: 920px;
  --bg-0: #fafafa;
  --bg-1: #f5f5f5;
  --bg-2: #e8e8e8;
  --text-0: #212121;
  --text-1: #666666;
  --text-2: #999999;
  --primary-color: #5a2095;
  --hover-color: #ffffff;
  --highlight-color: #f0f0f0;
}

@media (prefers-color-scheme: dark) {
  :root {
    --bg-0: #1a1a1a;
    --bg-1: #212121;
    --bg-2: #2a2a2a;
    --text-0: #e0e0e0;
    --text-1: #a0a0a0;
    --text-2: #737373;
    --border-color: #424242;
    --primary-color: #CF9FFF;
    --hover-color: #1a1a1a;
    --highlight-color: #3d1f5c;
  }
}

html.dark {
  --bg-0: #1a1a1a;
  --bg-1: #212121;
  --bg-2: #2a2a2a;
  --text-0: #e0e0e0;
  --text-1: #a0a0a0;
  --text-2: #737373;
  --border-color: #424242;
  --primary-color: #CF9FFF;
  --hover-color: #1a1a1a;
  --highlight-color: #3d1f5c;
}

* { margin: 0; padding: 0; box-sizing: border-box; }

html {
  background-color: var(--bg-0);
  color: var(--text-0);
  font-family: var(--text-font);
  line-height: var(--line-height);
  font-size: var(--font-size-base);
}

body {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0.9rem;
  min-height: 100vh;
}

a { color: inherit; text-decoration: none; }
a:hover { background-color: var(--primary-color); color: var(--hover-color); }

main a { border-bottom: 2px solid var(--primary-color); }

.main-content {
  width: 100%;
  max-width: var(--page-width);
  margin: 0 auto;
  padding: 0 0.9rem;
}

h1, h2, h3, h4, h5, h6 { font-family: var(--header-font); margin-top: 2em; }
h1::before { color: var(--primary-color); content: "# "; }
h2::before { color: var(--primary-color); content: "## "; }
h3::before { color: var(--primary-color); content: "### "; }
h1 { font-size: 2rem; margin-bottom: 1.5rem; }
h2 { font-size: 1.5rem; margin-bottom: 1rem; }
h3 { font-size: 1.25rem; }

p { margin-bottom: 1rem; }
time { color: var(--text-2); font-family: var(--mono-text-font); }

code {
  background-color: var(--bg-1);
  padding: 0.1em 0.2em;
  border-radius: 5px;
  border: 1px solid var(--border-color);
  font-family: var(--code-font);
}

pre {
  background-color: var(--bg-1) !important;
  border-radius: 5px;
  border: 1px solid var(--border-color);
  overflow-x: auto;
  padding: 1em;
  margin-bottom: 1rem;
}

pre code { background: transparent !important; border: none; padding: 0; }

img { max-width: 100%; border-radius: 0.5rem; }

table { border-spacing: 0; border-collapse: collapse; width: 100%; margin-bottom: 1rem; }
table th, table td { padding: 6px 13px; border: 1px solid var(--border-color); }
table th { background-color: var(--bg-1); }

blockquote { border-left: 3px solid var(--primary-color); color: var(--text-2); padding-left: 1em; }

ul, ol { margin-bottom: 1rem; padding-left: 1.5rem; }
li { margin-bottom: 0.5rem; }

::selection { background: var(--primary-color); color: var(--hover-color); }

.theme-toggle {
  background: none;
  border: none;
  cursor: pointer;
  padding: 0.25rem;
  color: var(--text-1);
  font-size: 1.2rem;
}
.theme-toggle:hover { background-color: var(--primary-color); color: var(--hover-color); }
</style>
