---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts');
const tags = [...new Set(posts.flatMap(post => post.data.tags))].sort();
---

<BaseLayout title="Tags | Cameron Durham">
  <h1>Tags</h1>
  <div class="tags-list">
    {tags.map(tag => (
      <a href={`/tags/${tag}`} class="tag-link">{tag}</a>
    ))}
  </div>
</BaseLayout>

<style>
.tags-list { display: flex; flex-wrap: wrap; gap: 0.75rem; margin-top: 1rem; }
.tag-link {
  background: var(--bg-1);
  padding: 0.5rem 1rem;
  border-radius: 4px;
  font-size: 1rem;
}
.tag-link:hover { background: var(--primary-color); }
</style>
